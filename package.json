{
	"name": "evilcoder",
	"description": "Discover the purpose of the mystery function",
	"type": "module",
	"scripts": {
		"build": "npm --workspaces --if-present run build",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint --max-warnings=0 .",
		"lint:fix": "npm run format && eslint --fix .",
		"prepare": "tsc --version && npm run build || echo '⚠️ no dev dependencies'",
		"test": "npm --workspaces --if-present test",
		"typecheck": "tsc --noEmit",
		"verify": "npm run build && npm --workspace verification run verify"
	},
	"license": "ISC",
	"prettier": {
		"useTabs": true
	},
	"devDependencies": {
		"@codeyourfuture/eslint-config-standard": "^8.0.0",
		"@tsconfig/node24": "^24.0.3",
		"@types/node": "^24.10.4",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	},
	"workspaces": [
		"properties",
		"exercise",
		"verification"
	],
	"engines": {
		"node": "^24.11"
	}
}
